{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["title", "steps"],
    "properties": {
        "title": {
            "type": "string",
            "description": "The title of the course"
        },
        "description": {
            "type": "string",
            "description": "A description of the course"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "title", "content"],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the step"
                    },
                    "title": {
                        "type": "string",
                        "description": "Title of the step"
                    },
                    "content": {
                        "type": "object",
                        "required": ["question", "options", "correctAnswer", "image"],
                        "properties": {
                            "question": {
                                "type": "string",
                                "description": "The question to display"
                            },
                            "options": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "The answer options"
                            },
                            "correctAnswer": {
                                "type": "integer",
                                "description": "The index of the correct answer"
                            },
                            "image": {
                                "type": "string",
                                "description": "The filename of the image to display (relative to the images folder)"
                            }
                        }
                    }
                }
            }
        }
    }
} 